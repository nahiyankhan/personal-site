---
import "@fontsource-variable/jetbrains-mono";
import { ViewTransitions } from "astro:transitions";
import BaseHead from "@/components/BaseHead.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Footer from "@/components/layout/Footer.astro";
import { siteConfig } from "@/site-config";
import type { SiteMeta } from "@/types";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { articleDate, description = siteConfig.description, ogImage, title },
} = Astro.props;
---

<html class="scroll-smooth" lang={siteConfig.lang}>
	<head>
		<BaseHead articleDate={articleDate} description={description} ogImage={ogImage} title={title} />
		<ViewTransitions />
	</head>
	<body
		class="nk-transition bg-bgColor text-sm font-light leading-[2rem] sm:text-base sm:leading-[2rem]"
	>
		<ThemeProvider />
		<main x-data id="main" class="nk-transition min-h-screen w-full pt-16 tracking-wider sm:pt-24">
			<div class="container nk-transition mx-auto flex flex-col">
				<slot />
			</div>
		</main>
	</body>
</html>
