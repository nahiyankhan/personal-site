		<div
			class="flex items-center justify-center !border-t-0 bg-[#ed1a2d]"
			@mouseover="adp = true"
			@mouseover.away="adp = false"
		>
			<div class="h-56 w-56 transition-all" :class="{ 'scale-50': isHover() && !adp }">
				<Fragment set:html={ADPLogo} />
			</div>
		</div>

