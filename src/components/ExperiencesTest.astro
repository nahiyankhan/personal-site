---
import CashAppLogo from "@/assets/cash_app.svg?raw";
import ADPLogo from "@/assets/adp.svg?raw";
import PearsonLogo from "@/assets/pearson.svg?raw";
---

<div
	class="grid-cols-[100px_1fr_100px] grid-cols-[24px_1fr_24px] divide-x border-b border-borderDivider sm:grid [&>div]:border-borderDivider"
>
	<div></div>

	<div
		class="grid h-[80vh] divide-x divide-y transition-all [&>div]:border-borderDivider"
		x-data="{ cash: false, adp: false, pearson: false, isHover() { return this.cash || this.adp || this.pearson } }"
		:style="{ 'grid-template': `${cash ? '3fr 1fr / 3fr 1fr' : adp ? '3fr 1fr / 1fr 3fr' : pearson ? '1fr 3fr / 3fr 1fr' : '1fr 1fr / 1fr 1fr'}` }"
	>
		<div
			class="bg-[#00D64F]x flex items-center justify-center"
			@mouseover="cash = true"
			@mouseover.away="cash = false"
		>
			<div class="h-56 w-56 transition-all" :class="{ 'scale-50': isHover() && !cash }">
				<Fragment set:html={CashAppLogo} />
			</div>

