---
/**
 * Dynamic demo component loader for forge items.
 * Add new demo components here as you create them.
 */
import AudioWaveVisualizer from "@/components/AudioWaveVisualizer.astro";
import MusicPlayer from "@/components/MusicPlayer.astro";

interface Props {
	slug: string;
}

const { slug } = Astro.props;
---

{
	slug === "music-viz" && (
		<div class="demo-wrapper">
			<AudioWaveVisualizer />
			<div class="player-container">
				<MusicPlayer />
			</div>
		</div>
	)
}

{/* Add more demo components here as you create forge items */}
{/* slug === "new-item" && <NewItemDemo /> */}

<style>
	.demo-wrapper {
		position: relative;
		width: 100%;
		height: 100%;
		min-height: inherit;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.player-container {
		position: absolute;
		bottom: 2rem;
		left: 50%;
		transform: translateX(-50%);
		z-index: 10;
	}

	@media (max-width: 640px) {
		.player-container {
			bottom: 1rem;
		}
	}
</style>

