---
import { siteConfig } from "@/site-config";
import Icon from "node_modules/astro-icon/components/Icon.astro";

const year = new Date().getFullYear();
---

<footer
	class="nk-transition z-20 w-full rounded-r-full border bg-bgColor"
	x-data
	x-cloak
	:style="$store.settings.open ? { marginLeft: `-320px` } : { marginLeft: `0px` }"
>
	<div class="container mx-auto flex h-full items-center justify-between overflow-hidden py-8">
		<div class="text-[10px] sm:text-base">
			&copy; {siteConfig.author}
			{year} | Made using <a class="link relative" href="https://astro.build/" target="_blank"
				>AstroJS</a
			>, <a class="link relative" href="https://tailwindcss.com/" target="_blank">Tailwind</a>, and <a
				class="link relative"
				href="https://alpinejs.dev/"
				target="_blank">AlpineJS</a
			>
		</div>
	</div>
</footer>

<style>
	[x-cloak] {
		display: none !important;
	}
</style>
