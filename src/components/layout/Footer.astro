---
import { siteConfig } from "@/site-config";
import Icon from "node_modules/astro-icon/components/Icon.astro";

const year = new Date().getFullYear();
---

<footer
	class="nk-transition h-8 w-full border-b border-t"
	x-data
	x-cloak
	:style="$store.settings.open ? { marginLeft: `-320px` } : { marginLeft: `0px` }"
>
	<div class="container mx-auto flex h-full items-center justify-between overflow-hidden px-2">
		<div class="text-[10px] sm:text-base">
			&copy; {siteConfig.author}
			{year} | Made using <a class="link relative" href="https://astro.build/" target="_blank"
				>AstroJS</a
			> and <a class="link relative" href="https://alpinejs.dev/" target="_blank">AlpineJS</a>
		</div>
	</div>
</footer>

<style>
	[x-cloak] {
		display: none !important;
	}
</style>
