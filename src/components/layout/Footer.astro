---
import { menuLinks, siteConfig } from "@/site-config";

const year = new Date().getFullYear();
---

<footer
	class="border-borderDivider mt-auto flex w-full flex-col items-center justify-center gap-y-2 border-t align-top font-semibold antialiased"
>
	<div
		class="border-borderDivider container border-l px-0 py-8 text-sm font-normal sm:flex-row sm:justify-between sm:text-xs"
	>
		<div class="me-0 sm:me-4">
			&copy; {siteConfig.author}
			{year}
		</div>
		<nav
			aria-label="More on this site"
			class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
		>
			{
				menuLinks.map((link) => (
					<a class="px-4 py-2 sm:py-0 sm:hover:text-textColor sm:hover:underline" href={link.path}>
						{link.title}
					</a>
				))
			}
		</nav>
	</div>
</footer>
