---
const { title, subtitle, ...rest } = Astro.props;
---

<div x-ref="sectionTitle" class="nk-transition" {...rest}>
	<div class="nk-transition relative flex min-h-[50vh] flex-col" x-ref={title}>
		<div class="relative w-full py-32 sm:py-24 md:py-32">
			<div class="relative z-20 flex flex-col">
				<div
					class="text-5xl font-light uppercase leading-[1.5rem] text-textProminent sm:text-6xl sm:leading-[3rem] md:text-8xl md:leading-[3.4rem] lg:text-9xl"
				>
					{title}
				</div>
				<div
					class="w-3/5 pl-0 pt-4 text-textSubtle sm:w-full sm:pl-0 sm:pt-0 md:pl-24 md:pt-4 lg:pt-0"
				>
					{subtitle}
				</div>
			</div>

			<div
				class="absolute top-14 z-10 h-48 w-48 rounded-full border bg-bgColor sm:top-0 sm:h-60 sm:w-60 md:h-80 md:w-80 lg:top-0 lg:h-96 lg:w-96"
			>
			</div>

			<div
				class="absolute right-0 top-0 my-24 h-24 w-1/2 overflow-hidden sm:my-16 sm:h-32 md:my-24 md:h-36 lg:h-48"
			>
				<div
					class="h-full w-full bg-[repeating-linear-gradient(57.5deg,transparent_0,transparent_6px,#C6C4D9_6px,#C6C4D9_7px)] dark:bg-[repeating-linear-gradient(57.5deg,transparent_0,transparent_6px,#57546B_6px,#57546B_7px)]"
				>
				</div>
			</div>
			<div
				class="absolute right-16 top-0 my-24 h-24 w-8 bg-accent sm:my-16 sm:h-32 md:my-24 md:h-36 lg:h-48"
				style="transform: skew(32.5deg)"
			>
			</div>
		</div>
		<slot />
	</div>
</div>
