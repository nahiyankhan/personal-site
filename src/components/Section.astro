---
const { title, ...rest } = Astro.props;
---

<div x-data="{ show: false }" class="border-b" {...rest}>
	<div class="container mx-auto flex min-h-[50vh] flex-col justify-center border-x" x-ref={title}>
		<div
			class="mt-10 inline-flex text-textProminent sm:mt-32"
			@scroll.window=`show = $refs.${title}.getBoundingClientRect().top <= (window.innerHeight/2)`
		>
			<h2 class="redact section-title relative" :class="{ 'redact-show': show }">
				/{title}
			</h2>
		</div>
		<slot />
	</div>
</div>
