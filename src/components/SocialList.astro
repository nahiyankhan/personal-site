---
import { Icon } from "astro-icon/components";

/** 
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Only installed pack is: @iconify-json/mdi
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "Email",
		link: "nahiyan.khan@gmail.com",
		name: "mdi:email",
	},
	{
		friendlyName: "LinkedIn",
		link: "https://www.linkedin.com/in/nahiyankhan/",
		name: "mdi:linkedin",
	},
	{
		friendlyName: "Github",
		link: "https://github.com/nahiyankhan",
		name: "mdi:github",
	},
];
---

<div class="flex flex-col">
	<p class="mb-8 h-[74px] content-end text-2xl font-extrabold">Say hello at</p>
	<ul class="">
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
				<li class="mb-2 flex">
					<a
						class="flex sm:hover:text-link"
						href={link}
						rel={`noreferrer ${isWebmention ? "me authn" : ""}`}
						target="_blank"
					>
						<Icon aria-hidden="true" class="h-8 w-8" focusable="false" name={name} />
						<p class="subtitle-large pl-2">{friendlyName}</p>
					</a>
				</li>
			))
		}
	</ul>
</div>
