---
const { title, ...rest } = Astro.props;
---

<div x-data="{ inview: false }" class="nk-transition" {...rest}>
	<div class="relative mb-4 inline-flex w-[fit-content] sm:mb-8">
		<div
			class="text-textProminent text-2xl font-bold uppercase leading-[1.5rem] sm:text-3xl sm:leading-[3rem] md:text-4xl xl:text-5xl"
		>
			{title}
		</div>
	</div>
</div>
