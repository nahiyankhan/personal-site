---
const { title, ...rest } = Astro.props;
---

<div x-data="{ inview: false }" class="nk-transition" {...rest}>
	<div
		class="relative mb-4 inline-flex w-[fit-content] animate-[fadein_.5s_cubic-bezier(0.55,0,1,0.45)_.7s_forwards] sm:mb-8"
	>
		<div
			class="text-2xl font-bold uppercase leading-[1.5rem] text-textProminent sm:text-3xl sm:leading-[3rem] md:text-4xl xl:text-5xl"
		>
			{title}
		</div>
	</div>
</div>
