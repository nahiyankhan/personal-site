---
import BlockLogo from "@/assets/block.svg?raw";
import CashAppLogo from "@/assets/cash_app.svg?raw";
import ADPLogo from "@/assets/adp.svg?raw";
import PearsonLogo from "@/assets/pearson.svg?raw";
import MacalesterLogo from "@/assets/macalester.svg?raw";
import DesignXLogoWhite from "@/assets/designx_white.svg?raw";
import DesignXLogoDark from "@/assets/designx_dark.svg?raw";
import Section from "./Section.astro";
import { Icon } from "astro-icon/components";
import ExperienceSneak from "@/assets/experience.gif";
import Subtitle from "./Subtitle.astro";
---

<Section title="experience" subtitle="AKA The things I am more than sorta good at.">
	<div class="mb-4 mt-4 sm:mt-8 md:w-4/5 lg:w-3/5"></div>

	<div class="mb-14 w-11/12 sm:mb-24 lg:w-3/5 xl:w-1/2" x-data="{ inview: false }">
		<div class="relative mb-8 mt-10 overflow-hidden rounded-tl-[180px] sm:mb-16">
			<div
				x-data
				:class="{ 'animate-[fadein_.5s_cubic-bezier(0.55,0,1,0.45)_.5s_forwards]': inview }"
				x-intersect.half="inview = true"
			>
				<img src={ExperienceSneak.src} class="pr-[1px]" height={ExperienceSneak.height} alt="" />
			</div>
		</div>
	</div>

	<Subtitle title="current" />

	<div class="mb-12 grid grid-cols-1 gap-8 md:mb-24 md:grid-cols-2">
		<div class="border-l">
			<div class="mb-4 flex flex-col sm:flex-row">
				<div
					class="flex h-12 w-12 items-center justify-center overflow-hidden rounded-full border sm:h-16 sm:w-16 [&>svg]:w-6 sm:[&>svg]:w-8"
				>
					<Fragment set:html={BlockLogo} />
				</div>
				<div class="mt-3 sm:ml-4 sm:mt-0">
					<p class="header-standard">Principal Design Engineer \ Applied AI</p>
					<p class="text-sm font-normal leading-[1.6] sm:text-base">
						Block <span class="text-textSubtle"> | Jan 2025 - Current</span>
					</p>
				</div>
			</div>

			<p class="leading-[1.6] sm:leading-[1.75]">
				Brb. Currently making sense of non-determinstic outputs.
			</p>
		</div>

		<div class="border-l">
			<div class="mb-4 flex flex-col sm:flex-row [&>svg]:w-12 sm:[&>svg]:w-16">
				<Fragment set:html={CashAppLogo} />
				<div class="mt-3 sm:ml-4 sm:mt-0">
					<p class="header-standard">Staff Design Engineer \ Design Systems</p>
					<p class="text-sm font-normal leading-[1.6] sm:text-base">
						Cash App <span class="text-textSubtle"> | April 2022 - Jan 2025</span>
					</p>
				</div>
			</div>

			<p class="leading-[1.6] sm:leading-[1.75]">
				Stood up Cash App's design system function and established the system - Arcade.
			</p>
		</div>
	</div>

	<Subtitle title="past" />

	<div class="mb-12 grid grid-cols-1 gap-8 md:mb-24 md:grid-cols-2">
		<div class="border-l">
			<div class="mb-4 flex flex-col sm:flex-row [&>svg]:w-12 sm:[&>svg]:w-16">
				<Fragment set:html={ADPLogo} />
				<div class="mt-3 sm:ml-4 sm:mt-0">
					<p class="header-standard">Lead UX Engineer \ Design Systems</p>
					<p class="text-sm font-normal leading-[1.6] sm:text-base">
						ADP <span class="text-textSubtle"> | March 2018 - April 2022</span>
					</p>
				</div>
			</div>

			<p class="leading-[1.6] sm:leading-[1.75]">
				Overhauled ADP's server-driven design system - Beacon.
			</p>
		</div>

		<div class="border-l">
			<div class="mb-4 flex flex-col sm:flex-row [&>svg]:w-12 sm:[&>svg]:w-16">
				<Fragment set:html={PearsonLogo} />
				<div class="mt-3 sm:ml-4 sm:mt-0">
					<p class="header-standard">Product Designer</p>
					<p class="text-sm font-normal leading-[1.6] sm:text-base">
						Pearson <span class="text-textSubtle"> | May 2013 - March 2018</span>
					</p>
				</div>
			</div>

			<p class="leading-[1.6] sm:leading-[1.75]">
				Functioned as a hybrid product designer and front-of-the-front-end engineer.
			</p>
		</div>

		<div class="border-l">
			<div class="mb-4 flex flex-col sm:flex-row [&>svg]:w-12 sm:[&>svg]:w-16">
				<Fragment set:html={MacalesterLogo} />
				<div class="mt-3 sm:ml-4 sm:mt-0">
					<p class="header-standard">Graphic Designer</p>
					<p class="text-sm font-normal leading-[1.6] sm:text-base">
						Macalester College
						<span class="text-textSubtle"> | September 2010 - May 2013</span>
					</p>
				</div>
			</div>

			<p class="leading-[1.6] sm:leading-[1.75]">Designed marketing materials for print and web.</p>
		</div>
	</div>

	<Subtitle title="community" />

	<div class="mb-12 grid grid-cols-1 gap-8 md:mb-24 md:grid-cols-2">
		<div class="border-l">
			<div class="mb-4 flex flex-col sm:flex-row">
				<div class="block dark:hidden [&>svg]:w-12 sm:[&>svg]:w-16">
					<Fragment set:html={DesignXLogoWhite} />
				</div>
				<div class="hidden dark:block [&>svg]:w-12 sm:[&>svg]:w-16">
					<Fragment set:html={DesignXLogoDark} />
				</div>
				<div class="mt-3 sm:ml-4 sm:mt-0">
					<p class="header-standard">Speaker</p>
					<p class="text-sm font-normal leading-[1.6] sm:text-base">
						Remote Design Week
						<span class="text-textSubtle"> | October 2021</span>
					</p>
				</div>
			</div>

			<div class="mt-8">
				<div class="relative">
					<iframe
						class="mb-4 w-full [aspect-ratio:16/9]"
						src="https://www.youtube.com/embed/wLSKcR7uAGE"
						title="Nahiyan Khan (Lead UX Engineer of Design Systems, Lifion by ADP)- Visualizing Design Tokens at Scale"
						allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
						referrerpolicy="strict-origin-when-cross-origin"
						allowfullscreen></iframe>
				</div>

				<p class="mb-4 leading-[1.6] sm:leading-[1.75]">
					Topic: “Visualizing Design Tokens at Scale”
				</p>

				<a
					class="link relative flex w-fit items-center text-textProminent underline"
					href="https://designx.community/talks/nahiyan-khan-visualizing-design-tokens-at-scale/"
					target="_blank"
				>
					<div class="full justify-left inline-flex items-center">
						<Icon
							aria-hidden="true"
							class="h-8 w-8"
							focusable="false"
							name="solar:round-arrow-right-up-bold-duotone"
						/>
					</div>
					<p class="pl-2">Talk details</p>
				</a>
			</div>
		</div>
	</div>
</Section>
