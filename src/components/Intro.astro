---
import NahiyanKhan from "@/assets/nahiyan-khan.svg?raw";
import NahiyanKhanLight from "@/assets/nahiyan-khan-light.svg?raw";
import NahiyanKhanDark from "@/assets/nahiyan-khan-dark.svg?raw";
---

<div class="nk-transition">
	<div class="flex flex-col sm:min-h-[50vh]">
		<div class="w-full sm:mb-20">
			<div class="relative mb-2 flex flex-wrap">
				<div
					class="relative mb-2 text-textProminent sm:mb-8 [&_svg]:ml-[-1px] [&_svg]:mr-[-1px] [&_svg]:h-full [&_svg]:w-[calc(100vw-16px)] [&_svg]:stroke-[2px] sm:[&_svg]:max-w-screen-sm sm:[&_svg]:stroke-[1px] md:[&_svg]:max-w-screen-md lg:[&_svg]:max-w-screen-lg lg:[&_svg]:stroke-[1px] xl:[&_svg]:max-w-screen-xl 2xl:[&_svg]:max-w-screen-2xl"
				>
					<div class="block dark:hidden">
						<Fragment set:html={NahiyanKhanLight} />
					</div>
					<div class="hidden dark:block">
						<Fragment set:html={NahiyanKhanDark} />
					</div>
				</div>
			</div>
			<div class="flex flex-col rounded-l-full border py-8">
				<p class="subtitle-large text-right">(na-he-yahn) khan 🖖🏽</p>
			</div>
		</div>
	</div>
</div>
