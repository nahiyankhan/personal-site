---
import { socialLinks } from "@/site-config";
import { Icon } from "astro-icon/components";
import Section from "./Section.astro";
---

<Section
	title="contact"
	subtitle="AKA Recommend a science fiction novel. Go climbing together. Let's jam."
/>

<div class="mb-2 text-base font-medium">Say hello at</div>
<ul class="mb-24">
	{
		socialLinks.map(({ friendlyName, link, name }) => (
			<li class="mb-2 flex">
				<a
					class="link relative flex items-center justify-center text-textProminent underline"
					href={link}
					target="_blank"
				>
					<div class="full justify-left flex items-center">
						<Icon aria-hidden="true" class="h-8 w-8" focusable="false" name={name} />
					</div>
					<p class="pl-2">{friendlyName}</p>
				</a>
			</li>
		))
	}
</ul>
