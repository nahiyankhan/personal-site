---
import { Icon } from "astro-icon/components";
import ThemeToggle from "./ThemeToggle.astro";
---

<settings
	x-data
	class="fixed right-0 top-0 z-20 h-full w-80 border-l bg-bgColor transition-all"
	:class="{ 'translate-x-0': $store.settings.open, 'translate-x-[100%]': !$store.settings.open }"
>
	<div class="flex h-full flex-col">
		<div class="flex h-24 justify-between border-b">
			<h3 class="text-textProminent">Settings</h3>
			<button
				class="relative h-7 w-7 text-textProminent"
				type="button"
				@click="$store.settings.toggle()"
			>
				<Icon aria-hidden="true" class="h-7 w-7" focusable="false" name="mdi:close" />
			</button>
		</div>
		<div class="flex flex-col pb-4">
			<div class="mb-4 flex items-center justify-between">
				<p class="text-textProminent">Theme</p>
				<!-- <button class="h-7 w-7 text-textProminent" type="button" @click="$store.theme.toggleMode()">
					<Icon aria-hidden="true" class="h-7 w-7" focusable="false" name="mdi:theme-light-dark" />
				</button> -->

				<ThemeToggle />
			</div>
			<div class="mb-4 flex items-center justify-between">
				<p class="text-textProminent">Abc</p>
				<button class="h-7 w-7 text-textProminent" type="button" @click="">
					<Icon aria-hidden="true" class="h-7 w-7" focusable="false" name="mdi:earth" />
				</button>
			</div>
		</div>
	</div>
</settings>
