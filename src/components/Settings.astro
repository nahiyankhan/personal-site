---
import { Icon } from "astro-icon/components";
import ThemeToggle from "./ThemeToggle.astro";
---

<settings
	x-data
	x-cloak
	class="fixed right-0 top-0 z-20 h-full w-[calc(20rem+1px)] border-l bg-bgColor duration-300 ease-[cubic-bezier(0.55,0,1,0.45)]"
	:class="{ 'translate-x-0': $store.settings.open, 'translate-x-[100%]': !$store.settings.open }"
>
	<div class="flex h-full flex-col">
		<div class="[&::after]:bg-bgDivider relative flex h-12 justify-between border-b sm:h-24">
			<h3 class="text-textProminent sm:text-xl">Settings</h3>
			<button
				class="relative h-5 text-textProminent sm:h-7 sm:w-7"
				type="button"
				@click="$store.settings.toggle()"
			>
				<Icon aria-hidden="true" class="h-5 w-5 sm:h-7 sm:w-7" focusable="false" name="mdi:close" />
			</button>
		</div>
		<div class="flex flex-col pb-4">
			<div class="flex items-center justify-between pb-2">
				<!-- <p class="text-textProminent">Theme</p> -->
				<ThemeToggle />
			</div>
			<div class="flex items-center justify-between pb-2">
				<button
					class="relative flex h-5 w-full justify-between text-textProminent sm:h-7 sm:w-full"
					type="button"
					@click=""
				>
					<p class="text-textProminent">Randomize (A.K.A Party Mode)</p>
					<Icon
						aria-hidden="true"
						class="h-5 w-5 sm:h-7 sm:w-7"
						focusable="false"
						name="mdi:party-popper"
					/>
				</button>
			</div>
		</div>
	</div>
	<style>
		[x-cloak] {
			display: none !important;
		}
	</style>
</settings>
